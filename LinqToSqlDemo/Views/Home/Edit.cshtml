@model LinqToSqlDemo.Models.EditViewModel


<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="well">
            <form method="POST" action="/home/edit">
                <input type="text" value="@Model.Person.FirstName" name="firstName" placeholder="First Name" class="form-control" />
                <br />
                <input type="text" value="@Model.Person.LastName" name="lastName" placeholder="Last Name" class="form-control" />
                <br />
                <input type="text" value="@Model.Person.Age" name="age" placeholder="Age" class="form-control" />
                <br />
                <input type="hidden" name="Id" value="@Model.Person.Id" />
                <button class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>